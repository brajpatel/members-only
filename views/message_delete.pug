extends layout

block content
  div(class="d-flex flex-column align-items-center mx-auto px-4 py-3 message-delete-container")
    p(class="h2 form-title text-center") Are you sure you want to delete this message?
    div(class="h5 text-center")
      p #[strong Message author:] #{message.author.username}
      p(class="my-2") #[strong Date added:] #{message.date_added}
      p #[strong Message text:] #{message.text}

    form(class="d-flex flex-column align-items-center" action="" method="POST")
      input(id="message" name="message" value=message._id type="hidden")
      button(class="my-2 delete-message" type="submit") Delete Message