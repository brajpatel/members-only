    div(class='d-flex flex-column')
      nav(class="d-flex justify-content-between align-items-center px-3")
        h2 LOGO
        ul(class="d-flex align-items-center nav-links")
          if user
            a(href="#")
              i(class="fa-solid fa-plus" title="Create a message")
            a(href="#")
              i(class="fa-solid fa-crown" title="Become a member")
            a(href="#") Sign Out
              i(class="fa-solid fa-right-from-bracket")

          else
            a(href="#") Login
              i(class="fa-solid fa-right-from-bracket")
            a(href="#") Sign up
              i(class="fa-solid fa-user-plus")

      div
        block content
